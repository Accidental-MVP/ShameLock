{
  "manifest_version": 3,
  "name": "ShameLock",
  "version": "1.0",
  "description": "A focus timer that shames you on GitHub when you visit distracting sites",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://shamelock-server.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}