{
  "manifest_version": 3,
  "name": "ShameLock",
  "version": "1.0",
  "description": "Block distracting sites and log your failures to GitHub. Publicly.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  }
}